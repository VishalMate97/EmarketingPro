@model EmarketingPro.Models.Adviewmodel
@{
    ViewBag.Title = "ViewAd";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}


<div class="row">
    <div class="col-lg-12 col-md-12">
        <img src="~/Content/img/f498e350807015.58da422d7ed7d.jpg" class="img img-responsive" style="width:100%" />
    </div>
</div>

<div class="row">

    <div class="col-lg-2 col-md-2">
        <img src="~/Content/img/christmas-sale-vertical-advertising-banner-450w-531750643.jpg" class="img img-responsive" style=" height:500px;" />
    </div>



    <div class="col-lg-8 col-md-8">

        <div>
            <h1>@Model.pro_name <small>AD-ID:@Model.pro_id</small></h1>
        </div>

        <img src="@Url.Content(@Model.pro_image)" style="width:800PX; height:450PX" />

        <div>
            <h1>Description: </h1>
            <p>@Model.pro_desc</p>
        </div>


        <table>
            <tr>
                <td><h3>Price :</h3></td>
                <td><h3>@Model.pro_price</h3></td>
            <tr>
            <tr>
                <td><h3>Category :</h3></td>
                <td><h3>@Model.cat_name</h3></td>
            <tr>
            <tr>
                <td><h3>Posted by :</h3></td>
                <td><h3>@Model.u_name</h3></td><td> <img src="@Url.Content(@Model.u_image)" style="width:40px; height:40px" /></td>
                
            <tr>
            <tr>
                <td><h3>Contact :</h3></td>
                <td><h3>@Model.u_contact</h3></td>
            <tr>
            <tr>
                <td colspan="2">
                    @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_fk_user))
                    {

                        @Html.ActionLink("Delete this Ad", "DeleteAd", new { @class = "btn btn-info", id = Model.pro_id })



                    }
                </td>
            </tr>
</table>


    </div>




    <div class="col-lg-2 col-md-2">
        <img src="~/Content/img/1-2-vertical.jpg" class="img img-responsive" style=" height:500px;" />
    </div>


</div>